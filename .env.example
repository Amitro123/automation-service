# GitHub Configuration
GITHUB_TOKEN=your_github_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here
REPOSITORY_OWNER=your_username
REPOSITORY_NAME=your_repo

# LLM Provider (openai, anthropic, or gemini)
LLM_PROVIDER=gemini
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
GEMINI_API_KEY=your_gemini_key_here
LLM_MODEL=gemini-2.0-flash

# Service Configuration
HOST=0.0.0.0
PORT=8080
DEBUG=False

# Automation Behavior
CREATE_PR=True
AUTO_COMMIT=False
POST_REVIEW_AS_ISSUE=False

# Mutation Testing (optional)
ENABLE_MUTATION_TESTS=False
MUTATION_MAX_RUNTIME_SECONDS=600
MUTATION_MIN_DIFF_LINES=10
