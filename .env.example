# GitHub Configuration
GITHUB_TOKEN=your_github_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here
REPOSITORY_OWNER=your_username
REPOSITORY_NAME=automation-service

# LLM Provider (openai, anthropic, or gemini)
LLM_PROVIDER=gemini
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
GEMINI_API_KEY=your_gemini_key_here
LLM_MODEL=gemini-2.0-flash

# Review Provider Configuration
# REVIEW_PROVIDER: "llm" = use LLM (Gemini/OpenAI/Anthropic), "jules" = use Jules API
REVIEW_PROVIDER=llm

# Jules API Configuration (only needed if REVIEW_PROVIDER=jules)
# Get your API key from: https://developers.google.com/jules/api
JULES_API_KEY=your_jules_api_key_here
JULES_API_URL=https://jules.googleapis.com/v1alpha
# Get your source ID by running: curl 'https://jules.googleapis.com/v1alpha/sources' -H 'X-Goog-Api-Key: YOUR_KEY'
# Format: sources/github/owner/repo
JULES_SOURCE_ID=sources/github/your_username/your_repo
# Optional: Project ID if you have a specific Jules project
JULES_PROJECT_ID=

# Service Configuration
# HOST: Network interface to bind to
# - 127.0.0.1 (default): Local development only (secure)
# - 0.0.0.0: All interfaces (required for Docker/production)
HOST=127.0.0.1
PORT=8080
DEBUG=False

# Automation Behavior
CREATE_PR=True
AUTO_COMMIT=False
POST_REVIEW_AS_ISSUE=False

# Mutation Testing (optional)
ENABLE_MUTATION_TESTS=False
MUTATION_MAX_RUNTIME_SECONDS=600
MUTATION_MIN_DIFF_LINES=10

# PR-Centric Trigger Configuration
# TRIGGER_MODE: "pr" = PR events only, "push" = push events only, "both" = both
TRIGGER_MODE=both
ENABLE_PR_TRIGGER=True
ENABLE_PUSH_TRIGGER=True

# Trivial Change Filter Configuration
# Skip automation for small/trivial changes to save LLM tokens
TRIVIAL_CHANGE_FILTER_ENABLED=True
TRIVIAL_MAX_LINES=10
# Comma-separated glob patterns for doc files (used in trivial detection)
TRIVIAL_DOC_PATHS=README.md,*.md,docs/**,CHANGELOG.md,CONTRIBUTING.md,LICENSE

# PR-Centric Automation Behavior
# Group README/spec updates into single automation PR per source PR
GROUP_AUTOMATION_UPDATES=True
# Post code review as PR comment instead of commit comment when triggered by PR
POST_REVIEW_ON_PR=True

# Gemini Rate Limiting Configuration
# Maximum requests per minute for Gemini API (free tier: 15 RPM, adjust based on your quota)
GEMINI_MAX_RPM=10
# Minimum delay between consecutive Gemini API calls (seconds)
GEMINI_MIN_DELAY_SECONDS=2.0
# Maximum concurrent Gemini requests (optional hard cap)
GEMINI_MAX_CONCURRENT_REQUESTS=3
